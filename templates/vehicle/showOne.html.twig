{% extends 'base.html.twig' %}

{% block title %}Occasions
{% endblock %}

{% block body %}


	<div class="container mb-5">
		<div class="row mt-5">

			<h1 class="col fs-3 font-monospace display-5 fw-bold text-info text-center">{{vehicle.brand}}
				-
				{{vehicle.model}}
				<span class="text-secondary">{{vehicle.title}}</span>
			</h1>

		</div>
		<div class="row mt-5">
			<div id="carouselExampleAutoplaying" class="carousel slide my-3" data-bs-ride="carousel">

				<div class="carousel-inner">


					<div class="carousel-item active">
						<img src="{{vich_uploader_asset(vehicle.images|first, 'imageFile')}}" class="d-block w-100 " alt="...">
					</div>


					{% for image in vehicle.images|slice(2, vehicle.images|length) %}
						<div class="carousel-item">
							<img src="{{vich_uploader_asset(image, 'imageFile')}}" class="d-block w-100" alt="...">
						</div>
					{% endfor %}
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>

				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>

				</button>

			</div>

		</div>

